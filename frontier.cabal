name:           frontier
version:        0.1
cabal-version:  >=1.2
build-type:     Simple
author:         ilmoeuro

executable frontier
  hs-source-dirs:  src
  main-is:         Main.hs
  build-depends:   
                   base >= 4,
                   containers >= 0.5 && < 0.6,
                   text >= 1.1 && < 1.2,
                   free >= 4.9 && < 5.0,
                   lens >= 4.6 && < 4.7,
                   transformers >= 0.3.0.0 && < 0.4,
                   mtl >= 2.1 && < 2.2
  ghc-options:     -Wall
  other-modules:   
                   Frontier.Feature,
                   Frontier.Feature.Action,
                   Frontier.Feature.Entity,
                   Frontier.Feature.Qualifier,
                   Frontier.Feature.Compose,
                   Frontier.Features.Building,
                   Frontier.Features.Farming,
                   Frontier.Features.Moving,
                   Frontier.Feature.Base
